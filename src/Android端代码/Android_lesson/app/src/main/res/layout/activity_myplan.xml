<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="#A6A6A6">

        <ImageView
            android:id="@+id/my_plan_back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:src="@drawable/my_plan_back"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingRight="30dp"
            android:text="我的计划"
            android:textSize="23sp"
            android:textColor="#0A0A0A"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingLeft="30dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:paddingTop="10dp"
            android:text="选择学习词书"
            android:textSize="23sp"
            android:textColor="#0A0A0A"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="20dp"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/my_plan_forth"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text="四级单词(3486个)"
            android:gravity="center"
            android:textSize="16sp"
            android:background="@drawable/my_plan_choose_plan_border"
            android:textColor="#1C86EE"
            />

        <TextView
            android:id="@+id/my_plan_sixth"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text="六级单词(3071个)"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:textSize="16sp"
            android:background="@drawable/my_plan_choose_plan_border"
            android:textColor="#7A8B8B"
            />

        <TextView
            android:id="@+id/my_plan_posth"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text="考研单词(6279个)"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:textSize="16sp"
            android:background="@drawable/my_plan_choose_plan_border"
            android:textColor="#7A8B8B"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_marginTop="30dp"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:background="@drawable/my_plan_select">

        <TextView
            android:id="@+id/my_plan_selectPlan"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="暂无计划"
            android:textSize="20sp"
            android:textColor="#1A1A1A"
            />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="#787878"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_weight="1"
                android:text="每天背单词"
                android:textSize="16sp"
                android:textColor="#404040"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_weight="1"
                android:text="完成天数"
                android:textSize="16sp"
                android:textColor="#404040"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/my_plan_num"
                android:layout_width="80dp"
                android:layout_height="150dp"
                android:layout_marginLeft="30dp"
                android:gravity="center"
                android:textColor="#DAA520"
                android:textSize="40sp"
                android:inputType="number"
                android:background="@null"
                 />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="150dp"
                android:gravity="center"
                android:text="个"
                android:textColor="#080808"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/my_plan_day"
                android:layout_width="90dp"
                android:layout_height="150dp"
                android:layout_marginLeft="30dp"
                android:textSize="40sp"
                android:textColor="#D02090"
                android:gravity="center" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="150dp"
                android:gravity="center"
                android:text="天"
                android:textColor="#080808"
                android:textSize="30sp" />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/my_plan_start"
        android:layout_width="320dp"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="学习该计划"
        android:textColor="#D3D3D3"
        android:textSize="23sp"
        android:background="@drawable/my_plan_start_selector"/>

</LinearLayout>
