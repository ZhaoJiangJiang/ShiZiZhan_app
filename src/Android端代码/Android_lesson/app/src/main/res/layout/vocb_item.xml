<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#F8F6F1"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/vocb_item_english"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:layout_weight="2"/>

        <TextView
            android:id="@+id/vocb_item_chinese"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="#858482"
            android:layout_weight="5"

            android:background="#858482"/>

        <Button
            android:id="@+id/vocb_item_detail"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/vocb_list_to_detail"/>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#EBE9E3" />

</LinearLayout>
